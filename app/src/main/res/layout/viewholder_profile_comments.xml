<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/viewholder_profile_comment"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:background="@color/colorLightGray"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:contentDescription="@string/comment"
            android:layout_gravity="start"
            android:padding="1dp"
            android:id="@+id/directory_image"
            android:src="@drawable/ic_chat"
            android:tint="@color/borderGray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/comment_directory_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 روز پیش برای رستوران دهکده ساحلی"
                    android:textSize="12sp"
                    android:textColor="@color/mediumGray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/comment_content"
                    android:gravity="start|top"
                    android:layout_gravity="start"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:text="متن کامنت"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_remove_comment"
            android:onClick="onClickRemove"
            android:layout_gravity="end"
            android:background="@drawable/ic_garbage"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/borderGray"/>


</LinearLayout>