<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/directories_list_view"
    android:layout_columnSpan="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_address_gradiant"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_diractoris_list">

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="onBackPressed"
            android:layout_gravity="left"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <Button
            android:onClick="advanceFilter"
            android:layout_gravity="left"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:background="@drawable/filter_white_shape"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <ImageView
            android:layout_gravity="right"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/thumbs_up_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ir.iraddress.www.extend.TextViewIranSans
            android:id="@+id/toolbar_title_directories"
            android:layout_gravity="right"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="بهترین های آدرس"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swifeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/toolbar_diractoris_list"
            android:id="@+id/directories_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>