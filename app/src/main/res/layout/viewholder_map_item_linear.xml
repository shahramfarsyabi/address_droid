<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/viewholder_map_item_linear"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="119dp">

            <ImageView
                android:src="@drawable/logo_orange"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="1dp"
                android:id="@+id/directory_image"
                android:layout_alignParentRight="true"
                android:layout_width="110dp"
                android:background="@drawable/image_border"
                android:layout_height="110dp" />

            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/directory_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ir.iraddress.www.extend.TextViewIranSans
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="نام دایرکتوری"
                    android:id="@+id/directory_title"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorGray"
                    android:text="آدرس"
                    android:id="@+id/directory_address"
                    android:layout_weight="1"
                    android:maxLength="70"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorGray"
                    android:text="شماره تماس"
                    android:id="@+id/directory_phone"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorGray"
                    android:text="فاصله"
                    android:id="@+id/directory_distance"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />

            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>