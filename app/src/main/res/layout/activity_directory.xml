<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Image Slider-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:elevation="2dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:id="@+id/collapsingToolbarLayout"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar1"
            android:background="@color/colorSecondary"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:alpha="0.5"
                android:background="@drawable/top_to_bottom_gradiant_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:paddingLeft="0dp">
                <Button
                    android:onClick="onBackPressed"
                    android:layout_gravity="right"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:background="@drawable/ic_arrow_pointing_to_right"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />
                <Button
                    android:id="@+id/share_button"
                    android:layout_gravity="left"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:background="@drawable/ic_share"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <!--Image Slider-->

    <!--Page Content-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:id="@+id/nestedScrollView">

        <LinearLayout
            android:background="@color/colorLightGray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray" />
            <!--Icons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="@color/colorWhite">
                <!--Path Finder-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">

                    <ir.iraddress.www.extend.AppButton
                        android:onClick="btnGoogleDirection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="مسیریابی"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_road_perspective"
                        android:drawableTint="@color/colorSecondary"
                        android:id="@+id/appButton" />
                </LinearLayout>
                <!--Divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/borderGray"/>
                <!--Rate-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <ir.iraddress.www.extend.AppButton
                        android:onClick="btnRating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="ثبت رای"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_star" />
                </LinearLayout>
                <!--Divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/borderGray" />
                <!--Upload Photo-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <ir.iraddress.www.extend.AppButton
                        android:onClick="dialogFileBrowser"
                        android:id="@+id/file_browser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="ارسال تصویر"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_photo_camera_primary" />
                    <ProgressBar
                        android:visibility="gone"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/loading_file_uploader" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray"
                android:layout_marginBottom="20dp"/>

            <!--Description-->
            <LinearLayout
                android:id="@+id/directory_description_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />

                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="توضیحات"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />
                </LinearLayout>
                <TextView
                    android:layout_margin="16dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <!--Description-->

            <!--Information-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <!--Path Finder-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1">

                        <ir.iraddress.www.extend.AppButton
                            android:onClick="btnGoogleDirection"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text="مسیریابی"
                            android:paddingTop="15dp"
                            android:drawableTop="@drawable/ic_envelope"
                            android:id="@+id/appButton" />
                    </LinearLayout>
                    <!--Divider-->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:background="@color/borderGray"/>
                    <!--Rate-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1">
                        <ir.iraddress.www.extend.AppButton
                            android:id="@+id/directory_box_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text=""
                            android:paddingTop="15dp"
                            android:drawableTop="@drawable/ic_telephone" />
                    </LinearLayout>
                </LinearLayout>
                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/borderGray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"></view>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <!--Path Finder-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1">

                        <ir.iraddress.www.extend.AppButton
                            android:onClick="btnGoogleDirection"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text="مسیریابی"
                            android:paddingTop="15dp"
                            android:drawableTop="@drawable/ic_road_perspective"
                            android:drawableTint="@color/colorSecondary"
                            android:id="@+id/appButton" />
                    </LinearLayout>
                    <!--Divider-->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:background="@color/borderGray"/>
                    <!--Rate-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1">
                        <ir.iraddress.www.extend.AppButton
                            android:onClick="btnRating"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text="ثبت رای"
                            android:paddingTop="15dp"
                            android:drawableTop="@drawable/ic_star" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray" />















            <!--Address-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ir.iraddress.www.extend.TextViewIranSansBold
                    android:id="@+id/address"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_map_marker"
                    android:gravity="center"
                    android:id="@+id/icon_phone"
                    android:text="ICON"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Address-->

            <!--Phone-->
            <LinearLayout
                android:visibility="gone"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <Button
                    android:id="@+id/dialer"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="تماس"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/directory_phone"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_telephone"
                    android:gravity="center"
                    android:id="@+id/icon_phone"
                    android:text="ICON"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Phone-->

            <!--Website-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/directory_box_website"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="مشاهده"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:autoLink="web"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:id="@+id/directory_website"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_computer_black_24dp"
                    android:id="@+id/icon_phone"
                    android:gravity="center"
                    android:text="Test"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Website-->

            <!--Author-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="پروفایل"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/sent_by_owner"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_person_black_24dp"
                    android:id="@+id/icon_phone"
                    android:gravity="center"
                    android:text="Test"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Author-->

            <!--Fax-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/directory_box_fax"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/directory_fax"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_print_black_24dp"
                    android:gravity="center"
                    android:id="@+id/icon_phone"
                    android:text="ICON"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Fax-->

            <!--Information-->






            <!--Comments-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ir.iraddress.www.extend.TextViewIranSansBold
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="نظرات"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/directory_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:divider="?android:dividerHorizontal"
                android:showDividers="end"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <Button
                    android:onClick="comments"
                    android:id="@+id/directory_all_comments"
                    android:layout_margin="10dp"
                    android:elevation="3dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="مشاهده همه نظرات"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/directory_first_comment"
                    android:layout_margin="10dp"
                    android:elevation="3dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="اولین نفری باشید که نظر ارسال می کنید"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Comments-->




            <!--Map-->
            <fragment
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                class="com.google.android.gms.maps.SupportMapFragment"/>
            <!--Map-->



            <!--Related Items-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />

                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="موارد مشابه"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/directory_similar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Related Items-->


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <!--Page Content-->

</android.support.design.widget.CoordinatorLayout>