<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:id="@+id/nestedScrollView">

        <LinearLayout
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ir.iraddress.www.extend.TextViewIranSans
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="شما هم از این مکان تصویری دارید ؟‌ برای ما ارسال کنید."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/file_browser"
                    android:layout_margin="10dp"
                    android:elevation="8dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="ارسال تصویر"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <ProgressBar
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading_file_uploader" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/directory_description_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />

                    <ir.iraddress.www.extend.TextViewIranSans
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="توضیحات"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />
                </LinearLayout>

                <TextView
                    android:layout_margin="16dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="اطلاعات"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />
            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/address"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_directions_black_24dp"
                    android:gravity="center"
                    android:id="@+id/icon_phone"
                    android:text="ICON"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/directory_box_phone"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <Button
                    android:id="@+id/dialer"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="تماس"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:autoLink="phone"
                    android:id="@+id/directory_phone"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:gravity="center"
                    android:id="@+id/icon_phone"
                    android:text="ICON"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/directory_box_website"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="مشاهده"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:autoLink="web"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:id="@+id/directory_website"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_computer_black_24dp"
                    android:id="@+id/icon_phone"
                    android:gravity="center"
                    android:text="Test"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="پروفایل"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/sent_by_owner"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_person_black_24dp"
                    android:id="@+id/icon_phone"
                    android:gravity="center"
                    android:text="Test"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/directory_box_fax"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/directory_fax"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_print_black_24dp"
                    android:gravity="center"
                    android:id="@+id/icon_phone"
                    android:text="ICON"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="نظرات"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/directory_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:divider="?android:dividerHorizontal"
                android:showDividers="end"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/directory_all_comments"
                    android:layout_margin="10dp"
                    android:elevation="8dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="مشاهده همه نظرات"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/directory_first_comment"
                    android:layout_margin="10dp"
                    android:elevation="8dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="اولین نفری باشید که نظر ارسال می کنید"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="250dp"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <fragment
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                class="com.google.android.gms.maps.SupportMapFragment"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />

                    <ir.iraddress.www.extend.TextViewIranSans
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="موارد مشابه"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/directory_similar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="250dp"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:id="@+id/collapsingToolbarLayout"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar1"
            android:background="@color/colorPrimaryDark"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:contentScrim="?attr/colorPrimary">

            <ImageView
                android:padding="20dp"
                android:id="@+id/app_bar_image"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_white"
                android:scaleType="fitCenter" />

            <View
                android:alpha="0.8"
                android:background="@drawable/top_to_bottom_gradiant_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:paddingLeft="0dp">

                <Button
                    android:onClick="onBackPressed"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:background="@drawable/ic_arrow_pointing_to_left"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <Button
                    android:id="@+id/share_button"
                    android:layout_gravity="right"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:background="@drawable/ic_share"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>