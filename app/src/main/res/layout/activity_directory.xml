<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Image Slider-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="2dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray"
            app:contentScrim="@drawable/toolbar_address_gradiant"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar1">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:indicator_visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@drawable/bottom_to_top_gradiant_black" />

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="2dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_arrow_pointing_to_right"
                    android:onClick="onBackPressed"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />

                <Button
                    android:id="@+id/share_button"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="start"
                    android:background="@drawable/ic_share"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <!--Image Slider-->

    <!--Page Content-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:id="@+id/nestedScrollView">

        <LinearLayout
            android:background="@color/colorLightGray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorWhite">
                <!--Path Finder-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="مراکز خرید"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:padding="5dp"
                        />
                </LinearLayout>
                <!--Divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/borderGray"/>
                <!--Rate-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="امتیاز: 4.5 از 5"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:padding="5dp"
                        />
                </LinearLayout>
                <!--Divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/borderGray"/>
                <!--Rate-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3 روز پیش"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:padding="5dp"
                        />
                </LinearLayout>

            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderGray" />
            <!--Icons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="@color/colorWhite">
                <!--Path Finder-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">

                    <ir.iraddress.www.extend.AppButton
                        android:onClick="btnGoogleDirection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/path_finder"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_road_perspective"
                        android:drawableTint="@color/colorSecondary"
                        android:id="@+id/appButton" />
                </LinearLayout>
                <!--Divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/borderGray"/>
                <!--Rate-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <ir.iraddress.www.extend.AppButton
                        android:onClick="btnRating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/rate_item"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_star" />
                </LinearLayout>
                <!--Divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/borderGray" />
                <!--Upload Photo-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ir.iraddress.www.extend.AppButton
                        android:onClick="dialogFileBrowser"
                        android:id="@+id/file_browser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/send_image"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_photo_camera_primary" />
                    <ProgressBar
                        android:visibility="gone"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/loading_file_uploader" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray"
                android:layout_marginBottom="20dp"/>

            <!--Description-->
            <LinearLayout
                android:id="@+id/directory_description_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />

                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/description"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />
                </LinearLayout>
                <TextView
                    android:layout_margin="16dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <!--Description-->

        <LinearLayout
            android:id="@+id/directory_facilities_box"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ir.iraddress.www.extend.TextViewIranSansBold
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="@string/facilities"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_facilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

            <!--Information-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:layoutDirection="rtl">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--Path Finder-->
                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آدرس این آیتم"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:padding="5dp"
                    />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/borderGray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <!--Path Finder-->
                    <ir.iraddress.www.extend.AppButton
                        android:onClick="btnMapLocation"
                        app:faFont="normal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/location"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_map_marker"
                        />
                    <!--Divider-->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:background="@color/borderGray"/>
                    <!--Rate-->

                    <ir.iraddress.www.extend.AppButton
                        app:faFont="normal"
                        android:id="@+id/directory_phone_dialer"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/phone_number"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_telephone"
                        android:drawableTint="@color/dialerGreen"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/borderGray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <!--Path Finder-->
                    <ir.iraddress.www.extend.AppButton
                        android:onClick="btnSendEmail"
                        app:faFont="normal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/email"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_envelope"
                        android:id="@+id/appButton" />
                    <!--Divider-->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:background="@color/borderGray"/>
                    <!--Rate-->
                    <ir.iraddress.www.extend.AppButton
                        android:onClick="btnWebSiteBrowser"
                        app:faFont="normal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/website"
                        android:paddingTop="15dp"
                        android:drawableTop="@drawable/ic_desktop_monitor"
                        android:drawableTint="@color/colorSecondary"/>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderGray" />







            <!--Phone-->
            <LinearLayout
                android:visibility="gone"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <Button
                    android:id="@+id/dialer"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/call"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/directory_phone"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:contentDescription="@string/phone_number"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_telephone"
                    android:gravity="center"
                    android:id="@+id/icon_phone"
                    android:text=""
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!--Website-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/directory_box_website"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="مشاهده"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:autoLink="web"
                    android:layout_toLeftOf="@+id/icon_phone"
                    android:gravity="center|right"
                    android:id="@+id/directory_website"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_computer_black_24dp"
                    android:id="@+id/icon_phone"
                    android:gravity="center"
                    android:text="Test"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <!--Author-->
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:onClick="btnShowProfile"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/profile"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/sent_by_owner"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:contentDescription="@string/phone_number"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_person_black_24dp"
                    android:id="@+id/icon_phone"
                    android:gravity="center"
                    android:layout_width="56dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!--Comments-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ir.iraddress.www.extend.TextViewIranSansBold
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="@string/comments"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center"
                    android:background="#CCC"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/directory_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:showDividers="end"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ir.iraddress.www.extend.AppButton
                    android:onClick="comments"
                    android:id="@+id/directory_all_comments"
                    android:layout_margin="10dp"
                    android:elevation="3dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="@string/see_all_comments"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />

                <ir.iraddress.www.extend.AppButton
                    android:onClick="btnWriteReview"
                    android:id="@+id/directory_first_comment"
                    android:layout_margin="10dp"
                    android:elevation="3dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#0DD0AE"
                    android:text="@string/be_first_to_comment"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Comments-->

            <!--Related Items-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />

                    <ir.iraddress.www.extend.TextViewIranSansBold
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/similar_items"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="center"
                        android:background="#CCC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/directory_similar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <!--Related Items-->


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <!--Page Content-->

</android.support.design.widget.CoordinatorLayout>