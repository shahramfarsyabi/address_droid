<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        android:id="@+id/cardview_similar_item"
        android:layout_width="match_parent"
        android:layout_height="360dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/tehran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ir.iraddress.www.extend.TextViewIranSansBold
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorWhite"
                    android:text="رستوران هاشم آقا"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ir.iraddress.www.extend.TextViewIranSans
                    android:text="تهران خیابان شماره یک کوچه شماره دو پلاک ۳"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp" />

                <RatingBar
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:rating="5"
                    android:stepSize="5" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>