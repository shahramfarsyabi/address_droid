<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/where_is_here_viewholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layoutDirection="rtl">

            <ImageView
                android:contentDescription="@string/comment"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="1dp"
                android:id="@+id/directory_image"
                android:src="@drawable/ic_noimg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="110dp"
                android:layout_height="110dp" />

            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/directory_image"
                android:layout_toEndOf="@+id/directory_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ir.iraddress.www.extend.TextViewIranSansBold
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorSecondary"
                    android:id="@+id/directory_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"/>

                <ir.iraddress.www.extend.TextViewIranSans
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorGray"
                    android:text="@string/lorem"
                    android:id="@+id/directory_comment"
                    android:layout_weight="1"
                    android:maxLength="70"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <ir.iraddress.www.extend.TextViewIranSans
                    android:id="@+id/comment_date_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 ساعت پیش توسط خشایار پورادبی"
                    android:textColor="@color/mediumGray"
                    android:textSize="11sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
</LinearLayout>